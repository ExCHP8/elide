<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <withJansi>true</withJansi>
        <encoder>
            <pattern>%cyan(%d{HH:mm:ss.SSS}) %highlight(%-5level) %magenta(ssg) - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="io.micronaut.context.env" level="off"/>
    <logger name="io.micronaut.http.client.netty.ssl.NettyClientSslBuilder" level="off" />

    <logger name="elide.tool.ssg.SiteCompiler" level="trace" />
    <logger name="elide.tool.ssg.FilesystemManifestReader" level="trace" />
    <logger name="elide.tool.ssg.DefaultAppLoader" level="trace" />
    <logger name="elide.tool.ssg.DefaultRequestFactory" level="trace" />
    <logger name="elide.tool.ssg.DefaultAppStaticCompiler" level="trace" />
    <logger name="elide.tool.ssg.DefaultAppStaticWriter" level="trace" />
    <logger name="elide.tool.ssg.DefaultAppStaticReader" level="trace" />

    <!-- Root Logger -->
    <root level="warn">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>
