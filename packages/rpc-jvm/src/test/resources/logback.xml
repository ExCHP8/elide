<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <withJansi>true</withJansi>
        <encoder>
            <pattern>%cyan(%d{HH:mm:ss.SSS}) %gray([%thread]) %highlight(%-5level) %magenta(tests) - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="elide.server.assets.AssetController" level="TRACE" />

    <!-- Root Logger -->
    <root level="trace">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>
